<div class="well">
  <h3>Profile</h3>
  <h4><%= current_user.name %></h4>
  <h5><%= current_user.email %></h5>
</div>
<div class="well">
  <h3>Comments</h3>
<% @user_comments.each do |comments| %>
  <div>
  <a href="/">
    <strong><%= comments.post.title %></strong></a>
    <p><%= comments.content %></p>
  </div>

<% end %>
</div>
